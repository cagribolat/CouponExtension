{
  "manifest_version": 2,
  "name": "Kupon Eklentisi",
  "version": "1.0",
  "description": "Kupon Eklentisi",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "externally_connectable": {
    "matches": ["*://www.idownloadcoupon.com/*"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
